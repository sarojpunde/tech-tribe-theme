{
  "name": "shopify-theme-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:css": "postcss -w src/css/theme.css -o src/theme/assets/theme.min.css.liquid --no-map --minify",
    "build:css": "rimraf src/theme/assets/theme.min.css.liquid && postcss src/css/theme.css -o src/theme/assets/theme.min.css.liquid --no-map --minify",
    "watch:js": "rimraf src/theme/assets/theme.min.js && webpack watch",
    "build:js": "rimraf src/theme/assets/theme.min.js && webpack --mode production",
    "watch:theme": "shopify theme dev -e development --path src/theme",
    "dev": "concurrently \"yarn watch:css\" \"yarn watch:js\" \"yarn watch:theme\"",
    "build": "yarn build:css && yarn build:ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sarojpunde/shopify-theme2.0-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sarojpunde/shopify-theme2.0-boilerplate/issues"
  },
  "homepage": "https://github.com/sarojpunde/shopify-theme2.0-boilerplate#readme",
  "dependencies": {
    "@shopify/theme-cart": "^4.1.1",
    "@splidejs/splide": "^4.1.4",
    "alpinejs": "^3.14.8",
    "concurrently": "^9.1.2",
    "drift-zoom": "^1.5.1",
    "graphql": "^16.10.0",
    "graphql-request": "^7.1.2",
    "vanilla-lazyload": "^19.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/runtime": "^7.22.5",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@types/alpinejs": "^3.13.11",
    "@types/node": "^22.12.0",
    "@types/webpack-env": "^1.18.8",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "core-js": "^3.31.0",
    "cross-env": "^7.0.3",
    "cssnano": "^6.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "jest": "^29.5.0",
    "lazysizes": "^5.3.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
